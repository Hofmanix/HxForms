<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HxForms.Views.MultiPicker">
    <ContentView.Content>
        <StackLayout Padding="10">
            <Label x:Name="PlaceholderLabel" FontSize="16"/>
            <Label x:Name="SelectedItemsLabel" IsVisible="False"/>
        </StackLayout>
    </ContentView.Content>
    <ContentView.GestureRecognizers>
        <TapGestureRecognizer Tapped="MultiPickerClicked"/>
    </ContentView.GestureRecognizers>
</ContentView>